#!/bin/bash
usage() {
cat << EOF
NAME
       $(basename $0) - run an openMVG command in openmvg-docker container

SYNOPSIS
       [DOCKER_OPTIONS="--name=example"] $(basename $0) COMMAND [ARG ...]

DESCRIPTION
       Run an openMVG command in a penmvg-docker container.
       The defaults docker options are preset to "-v /mnt:/mnt -it --rm=true".
       You may want to override the DOCKER_DEFAULTS environment variable or to
       supply additional options using DOCKER_OPTIONS.

EOF
exit 1
}

[ "$1" = '-h' -o "$1" = '--help' ] && usage

DOCKER_DEFAULTS=${DOCKER_DEFAULTS:-"-v /mnt:/mnt -it --rm=true"}
docker run $DOCKER_DEFAULTS $DOCKER_OPTIONS openmvg-bin $(basename $0) $@
